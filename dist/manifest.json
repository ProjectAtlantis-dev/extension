{
    "manifest_version": 3,
    "name": "My First Extension",
    "version": "1.0",
    "permissions": [
        "activeTab",
        "scripting",
        "tabs"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "19": "images/icon19.png",
            "38": "images/icon38.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },

    "content_scripts": [
        {
          "js": ["content.js"],
          "run_at": "document_idle"
        }
    ],

    "icons": {
        "19": "images/icon19.png",
        "38": "images/icon38.png",
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    }

}

